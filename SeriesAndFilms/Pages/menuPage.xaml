<Page x:Class="SeriesAndFilms.Pages.menuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeriesAndFilms.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="menuPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">

            <Button x:Name="btnMainPage" 
                    Content="Главная"
                    Style="{StaticResource ButtonMenuStyle1}"
                    Click="btnMainPage_Click"/>
            
            <Button x:Name="btnSeries"
                    Content="Список сериалов"
                    Style="{StaticResource ButtonMenuStyle1}"
                    Click="btnSeries_Click"/>
            
            <Button x:Name="btnFilms"
                    Content="Список фильмов"
                    Style="{StaticResource ButtonMenuStyle1}"
                    Click="btnFilms_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
